    var _Nimbb_state;

    function Nimbb_recordingStopped(idPlayer) {
        if(!recorder.isReadOnly()) {
            document[idPlayer].saveVideo();
        }
    }

    function Nimbb_stateChanged(idPlayer, state) {
        if(_Nimbb_state == 'recording' && state == 'ready') {
            document[idPlayer].saveVideo();
        }

        _Nimbb_state = state;
    }
